using College.Application.DTOs;
using College.Domain.Entities;
using College.Domain.Repositories;

namespace College.Application.Services
{
    public class StudentService : IStudentService
    {
        private readonly IStudentRepository _studentRepository;
        private readonly ICourseRepository _courseRepository;

        public StudentService(IStudentRepository studentRepository, ICourseRepository courseRepository)
        {
            _studentRepository = studentRepository;
            _courseRepository = courseRepository;
        }

        public async Task<StudentDto?> GetByIdAsync(int id)
        {
            Student? studentEntity = await _studentRepository.GetByIdAsync(id);
            if (studentEntity == null)
                return null;

            return new StudentDto
            {
                id = studentEntity.Id,
                fullName = studentEntity.FullName,
                courseId = studentEntity.CourseId
            };
        }

        public async Task<IEnumerable<StudentDto>> GetAllAsync()
        {
            IEnumerable<Student> studentsCollection = await _studentRepository.GetAllAsync();
            
            return studentsCollection.Select(studentEntity => new StudentDto
            {
                id = studentEntity.Id,
                fullName = studentEntity.FullName,
                courseId = studentEntity.CourseId
            });
        }

        public async Task<StudentDto> CreateAsync(CreateStudentDto createStudentDto)
        {
            Course? courseExists = await _courseRepository.GetByIdAsync(createStudentDto.courseId);
            if (courseExists == null)
            {
                throw new InvalidOperationException($"El curso con ID {createStudentDto.courseId} no existe. No se puede crear el estudiante sin un curso válido.");
            }

            Student studentEntity = new Student(createStudentDto.fullName, createStudentDto.courseId);
            Student createdStudentEntity = await _studentRepository.AddAsync(studentEntity);

            return new StudentDto
            {
                id = createdStudentEntity.Id,
                fullName = createdStudentEntity.FullName,
                courseId = createdStudentEntity.CourseId
            };
        }

        public async Task<StudentDto?> UpdateAsync(int id, UpdateStudentDto updateStudentDto)
        {
            Student? studentEntity = await _studentRepository.GetByIdAsync(id);
            if (studentEntity == null)
                return null;

            Course? courseExists = await _courseRepository.GetByIdAsync(updateStudentDto.courseId);
            if (courseExists == null)
            {
                throw new InvalidOperationException($"El curso con ID {updateStudentDto.courseId} no existe. No se puede actualizar el estudiante con un curso inválido.");
            }

            studentEntity.UpdateFullName(updateStudentDto.fullName);
            studentEntity.UpdateCourse(updateStudentDto.courseId);
            await _studentRepository.UpdateAsync(studentEntity);

            return new StudentDto
            {
                id = studentEntity.Id,
                fullName = studentEntity.FullName,
                courseId = studentEntity.CourseId
            };
        }

        public async Task<bool> DeleteAsync(int id)
        {
            Student? studentEntity = await _studentRepository.GetByIdAsync(id);
            if (studentEntity == null)
                return false;

            await _studentRepository.DeleteAsync(id);
            return true;
        }
    }
}