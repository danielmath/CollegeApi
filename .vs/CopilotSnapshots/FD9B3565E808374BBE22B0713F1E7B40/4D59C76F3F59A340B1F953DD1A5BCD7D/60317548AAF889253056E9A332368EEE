using College.Application.DTOs;
using College.Domain.Entities;
using College.Domain.Repositories;

namespace College.Application.Services
{
    public class CourseService : ICourseService
    {
        private readonly ICourseRepository _courseRepository;

        public CourseService(ICourseRepository courseRepository)
        {
            _courseRepository = courseRepository;
        }

        public async Task<CourseDto?> GetByIdAsync(int id)
        {
            Course? courseEntity = await _courseRepository.GetByIdAsync(id);
            if (courseEntity == null)
                return null;

            return new CourseDto
            {
                id = courseEntity.Id,
                name = courseEntity.Name,
                code = courseEntity.Code,
                credits = courseEntity.Credits
            };
        }

        public async Task<IEnumerable<CourseDto>> GetAllAsync()
        {
            IEnumerable<Course> coursesCollection = await _courseRepository.GetAllAsync();
            
            return coursesCollection.Select(courseEntity => new CourseDto
            {
                id = courseEntity.Id,
                name = courseEntity.Name,
                code = courseEntity.Code,
                credits = courseEntity.Credits
            });
        }

        public async Task<CourseDto> CreateAsync(CreateCourseDto createCourseDto)
        {
            Course courseEntity = new Course(createCourseDto.name, createCourseDto.code, createCourseDto.credits);
            Course createdCourseEntity = await _courseRepository.AddAsync(courseEntity);

            return new CourseDto
            {
                id = createdCourseEntity.Id,
                name = createdCourseEntity.Name,
                code = createdCourseEntity.Code,
                credits = createdCourseEntity.Credits
            };
        }

        public async Task<CourseDto?> UpdateAsync(int id, UpdateCourseDto updateCourseDto)
        {
            Course? courseEntity = await _courseRepository.GetByIdAsync(id);
            if (courseEntity == null)
                return null;

            courseEntity.UpdateDetails(updateCourseDto.name, updateCourseDto.code, updateCourseDto.credits);
            await _courseRepository.UpdateAsync(courseEntity);

            return new CourseDto
            {
                id = courseEntity.Id,
                name = courseEntity.Name,
                code = courseEntity.Code,
                credits = courseEntity.Credits
            };
        }

        public async Task<bool> DeleteAsync(int id)
        {
            Course? courseEntity = await _courseRepository.GetByIdAsync(id);
            if (courseEntity == null)
                return false;

            await _courseRepository.DeleteAsync(id);
            return true;
        }
    }
}