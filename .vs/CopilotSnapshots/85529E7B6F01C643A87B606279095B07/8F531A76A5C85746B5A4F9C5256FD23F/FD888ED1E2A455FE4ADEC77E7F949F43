using College.Application.DTOs;

namespace College.Application.Services.Contracts
{
    public interface IProfessorService
    {
        Task<ProfessorDto?> GetByIdAsync(int id);
        Task<IEnumerable<ProfessorDto>> GetAllAsync();
        Task<ProfessorDto> CreateAsync(CreateProfessorDto createProfessorDto);
        Task<ProfessorDto?> UpdateAsync(int id, UpdateProfessorDto updateProfessorDto);
        Task<bool> DeleteAsync(int id);
    }
}