using College.Application.DTOs;
using College.Application.UseCases.Students.Commands;
using College.Domain.Entities;
using College.Domain.Repositories;
using MediatR;

namespace College.Application.UseCases.Students.Handlers
{
    public class CreateStudentHandler : IRequestHandler<CreateStudentCommand, StudentDto>
    {
        private readonly IStudentRepository _studentRepository;

        public CreateStudentHandler(IStudentRepository studentRepository)
        {
            _studentRepository = studentRepository;
        }

        public async Task<StudentDto> Handle(CreateStudentCommand request, CancellationToken cancellationToken)
        {
            var student = new Student(request.fullName);
            var createdStudent = await _studentRepository.AddAsync(student);

            return new StudentDto
            {
                id = createdStudent.Id,
                fullName = createdStudent.FullName
            };
        }
    }
}