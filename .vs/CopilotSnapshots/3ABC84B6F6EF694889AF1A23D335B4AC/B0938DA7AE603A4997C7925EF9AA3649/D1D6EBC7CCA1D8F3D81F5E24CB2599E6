using College.Application.UseCases.Students.Commands;
using College.Domain.Repositories;
using MediatR;

namespace College.Application.UseCases.Students.Handlers
{
    public class DeleteStudentHandler : IRequestHandler<DeleteStudentCommand, bool>
    {
        private readonly IStudentRepository _studentRepository;

        public DeleteStudentHandler(IStudentRepository studentRepository)
        {
            _studentRepository = studentRepository;
        }

        public async Task<bool> Handle(DeleteStudentCommand request, CancellationToken cancellationToken)
        {
            var student = await _studentRepository.GetByIdAsync(request.id);
            if (student == null)
                return false;

            await _studentRepository.DeleteAsync(request.id);
            return true;
        }
    }
}